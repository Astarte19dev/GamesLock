<div class="container">
  <div class="row text-content-justify">
    <div class="col-12">
      <h1>Welcome to your profile</h1>
      <h2>My games to rent</h2>
      <% @games.each do |game| %>
        <div class="row justify-content-center">
          <div class="card-product m-3">
            <%= cl_image_tag game.photo.key, width: 200, crop: :fill %>
            <div class="card-product-infos">
              <h2><%= link_to game.name, game_path(game) %></h2>
              <p><%= game.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
