
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">

    <div class=“container”>
      <h1>Edit your game here</h1>
      <%= simple_form_for(@game) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :game_type,
                    wrapper_html: {id:"inputGame_Type", class: "form-select" },
                    collection: ['Agility', 'Aventure', 'Family', 'Humor', 'Reflexion', 'Strategy']
                    %>
        <%= f.input :price %>
        <%= f.input :level,
                    wrapper_html: {id:"inputLevel", class: "form-select" },
                    collection: ['Very easy', 'Easy', 'Normal', 'Expert']
                    %>
            <%= f.input :player,
                    wrapper_html: {id:"inputType", class: "form-select" },
                    collection: 1..12
                    %>
            <%= f.input :age,
                    wrapper_html: {id:"inputType", class: "form-select" },
                    collection: ['Moins de 3 ans', '4 - 6 ans', '7 - 10 ans', '10 - 16 ans', '16+ ans']
                    %>

        <legend><h5>This game is in activ reservation</h5></legend>

        <div>
          <input type="checkbox" id="yes">
          <label for="activ">Yes</label>
        </div>

        <div>
          <input type="checkbox" id="no">
          <label for="noActiv">No</label>
        </div>

      </div>
          <%= f.button :submit, class: 'btn btn-primary' %>
        <% end %>
    </div>

    </div>
  </div>
</div>
