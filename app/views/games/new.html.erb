<div class="container mt-5">
  <h1 class="form-title d-flex justify-content-center">What games would you like to rent?</h1>
    <%= simple_form_for(@game) do |f| %>
      <div class="row justify-content-center">
        <div class="col-4 col-sm-3 my-3">
          <%= f.input :name %>
        </div>
        <div class="col-4 col-sm-3 my-3">
          <%= f.input :type %>
        </div>
      </div>
        <div class="row justify-content-center">
          <div class="col-8 col-sm-6 my-3">
          <%= f.input :description %>
        <div class="row justify-content-center">
          <div class="col-4 col-sm-3 my-3">
          <label for="inputLevel">Players max.</label>
          <select id="inputLevel" class="form-select">
            <option selected></option>
            <option>max 1</option>
            <option>max 2</option>
            <option>max 3</option>
            <option>max 4</option>
            <option>max 5</option>
            <option>max 6</option>
            <option>max 7</option>
            <option>max 8</option>
            <option>max 9</option>
            <option>max 10</option>
            <option>max 11</option>
            <option>max 12</option>
          </select>
        </div>
          <div class="col-4 col-sm-3 my-3">
          <label for="inputLevel">Age</label>
          <select id="inputLevel" class="form-select">
            <option selected></option>
            <option>1 years min</option>
            <option>2 years min</option>
            <option>4 years min</option>
            <option>6 years min</option>
            <option>8 years min</option>
            <option>10 years min</option>
            <option>12 years min</option>
            <option>14 years min</option>
            <option>16 years min</option>
          </select>
          </div>
        </div>
      <div class="row justify-content-center">
        <div class="col-4 col-sm-3 my-3">
          <label for="inputLevel">Level</label>
          <select id="inputLevel" class="form-select">
            <option selected></option>
            <option>Very easy</option>
            <option>Easy</option>
            <option>Normal</option>
            <option>Expert</option>
          </select>
        </div>
        <div class="col-4 col-sm-3 my-3">
          <%= f.input :price %>
        </div>
          <%= f.button :submit, class: "btn-green" %>
      <% end %>
      </div>
  </div>
